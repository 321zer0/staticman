{
  "name": "@staticman/server",
  "version": "1.0.0",
  "description": "Static sites with superpowers",
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel source -d ./build",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node build/start.js",
    "start-dev": "nodemon --exec babel-node -- source/start.js",
    "prepublishOnly": "npm run build",
    "pretest": "eslint .",
    "test": "jest",
    "test-dev": "jest --watch --silent",
    "debug": "nodemon --inspect source/start.js"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardoboucas/staticman.git"
  },
  "author": "Eduardo Boucas <mail@eduardoboucas.com> (https://eduardoboucas.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eduardoboucas/staticman/issues"
  },
  "homepage": "https://github.com/eduardoboucas/staticman#readme",
  "dependencies": {
    "body-parser": "^1.17.x",
    "convict": "^6.0.0",
    "express": "^4.14.0",
    "express-brute": "^0.6.0",
    "express-github-webhook": "^1.0.5",
    "express-jsdoc-swagger": "^1.2.0",
    "express-recaptcha": "^2.1.0",
    "nodemon": "^1.19.4",
    "object-path": "^0.11.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "source/controllers/**/*.js",
      "source/lib/**/*.js",
      "source/*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.{json,md,yml}": [
      "npx prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "airbnb/base",
      "plugin:jest/style",
      "prettier"
    ],
    "ignorePatterns": [
      "build/*"
    ],
    "parser": "@babel/eslint-parser",
    "rules": {
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    },
    "overrides": [
      {
        "env": {
          "jest": true
        },
        "files": [
          "test/**/*.js"
        ],
        "plugins": [
          "jest"
        ],
        "rules": {
          "no-unused-vars": [
            "error",
            {
              "args": "none"
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
