{
  "name": "staticman",
  "version": "3.0.0",
  "description": "Static sites with superpowers",
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel source -d ./build",
    "build": "npm run clean && npm run build-babel",
    "prepublishOnly": "npm run build",
    "pretest": "eslint .",
    "test": "jest",
    "test-dev": "jest --watch --silent",
    "debug": "nodemon --inspect source/start.js"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardoboucas/staticman.git"
  },
  "author": "Eduardo Boucas <mail@eduardoboucas.com> (https://eduardoboucas.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eduardoboucas/staticman/issues"
  },
  "homepage": "https://github.com/eduardoboucas/staticman#readme",
  "dependencies": {
    "@dadi/logger": "^1.4.1",
    "@octokit/app": "^4.1.0",
    "@octokit/request": "^5.3.1",
    "@octokit/rest": "^16.35.0",
    "akismet": "^1.0.0",
    "bunyan-slack": "0.0.10",
    "convict": "^6.0.0",
    "gitlab": "^3.5.1",
    "js-yaml": "^3.10.0",
    "jsonwebtoken": "^8.4.0",
    "mailgun-js": "^0.22.0",
    "markdown-table": "^1.0.0",
    "md5": "^2.1.0",
    "moment": "^2.18.1",
    "node-rsa": "^0.4.2",
    "nodemon": "^1.19.4",
    "object-path": "^0.11.1",
    "request-promise": "^4.2.2",
    "sha1": "^1.1.1",
    "slug": "^0.9.3",
    "universal-analytics": "^0.4.2",
    "uuid": "^3.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "source/controllers/**/*.js",
      "source/lib/**/*.js",
      "source/*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.{json,md,yml}": [
      "npx prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "airbnb/base",
      "plugin:jest/style",
      "prettier"
    ],
    "ignorePatterns": [
      "build/*"
    ],
    "parser": "@babel/eslint-parser",
    "rules": {
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    },
    "overrides": [
      {
        "env": {
          "jest": true
        },
        "files": [
          "test/**/*.js"
        ],
        "plugins": [
          "jest"
        ],
        "rules": {
          "no-unused-vars": [
            "error",
            {
              "args": "none"
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
